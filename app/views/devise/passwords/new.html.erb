<div class="authform">

  <div class="formHeader">
    <%= image_tag "logo.png", :title => "logo"%>
  </div>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <h3>Mot de passe oubli√© ?</h3>
    <p>Entrez votre email, nous vous enverrons nos instructions</p>
    <%= devise_error_messages! %>
    
    <div class="form-group">
      <div class="input input--hoshi">
        <%= f.email_field :email, :autofocus => true, class: 'input__field input__field--hoshi' %>
        <%= f.label(:email, {class:'input__label input__label--hoshi input__label--hoshi-color-2'}) do %>
          <span class="input__label-content input__label-content--hoshi">Email</span>
        <% end %>
      </div>
    </div>

     <%= f.submit 'Reset Password', class: 'button btn btn-secondary' %>
  <% end %>

  <div class="divider"></div>

  <div class="formFooter">
  <%- if devise_mapping.registerable? %>
    <%= link_to "S'identifier", new_user_session_path, class: 'button btn btn-secondary'  %>
  <% end -%>
  </div>
    
</div>