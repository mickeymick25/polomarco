<div class="authform">

  <div class="formHeader">
    <%= image_tag "logo.png", :title => "logo"%>
  </div>
  
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
    <h3>Mon compte</h3>
    <%= devise_error_messages! %>

    <div class="form-group">
      <div class="input input--hoshi">
        <%= f.text_field :name, :autofocus => true, class: 'input__field input__field--hoshi' %>
        <%= f.label(:name, {class:'input__label input__label--hoshi input__label--hoshi-color-2'}) do %>
          <span class="input__label-content input__label-content--hoshi">Nom</span>
        <% end %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="input input--hoshi">
        <%= f.email_field :email, class: 'input__field input__field--hoshi' %>
        <%= f.label(:email, {class:'input__label input__label--hoshi input__label--hoshi-color-2'}) do %>
            <span class="input__label-content input__label-content--hoshi">Email</span>
        <% end %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>
    
    <fieldset>
      <p>Leave these fields blank if you don't want to change your password.</p>
      <div class="form-group">
        <div class="input input--hoshi">
          <%= f.password_field :password, :autocomplete => 'off', class: 'input__field input__field--hoshi' %>
          <%= f.label(:password, {class:'input__label input__label--hoshi input__label--hoshi-color-2'}) do %>
              <span class="input__label-content input__label-content--hoshi">Mot de passe</span>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <div class="input input--hoshi">
          <%= f.password_field :password_confirmation, class: 'input__field input__field--hoshi' %>
          <%= f.label(:password_confirmation, {class:'input__label input__label--hoshi input__label--hoshi-color-2'}) do %>
              <span class="input__label-content input__label-content--hoshi">Confirmer le mot de passe</span>
          <% end %>
        </div>
      </div>
    </fieldset>
    
 
      <p>Entrez votre mot de passe afin de prendre en compte vos modifications.</p>
      <div class="form-group">
        <div class="input input--hoshi">
          <%= f.password_field :current_password, class: 'input__field input__field--hoshi' %>
          <%= f.label(:current_password, {class:'input__label input__label--hoshi input__label--hoshi-color-2'}) do %>
              <span class="input__label-content input__label-content--hoshi">Confirmer le mot de passe</span>
          <% end %>
        </div>
      </div>
  
    
    <%= f.submit 'Mettre à jour', :class => 'button btn btn-secondary' %>
  <% end %>
</div>


<div class="authform">
  <h3>Supprimer mon compte</h3>
  <p>Nous ne pouvons rien faire pour vous retenir ?</p>
  <%= button_to "Supprimer", registration_path(resource_name), :data => { :confirm => "Ok! Toute suppression est définitive." }, :method => :delete, :class => 'button btn btn-secondary' %>
</div>
