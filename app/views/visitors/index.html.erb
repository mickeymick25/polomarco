<!-- begin intro section -->
<section class="intro" id="intro">
	<%= video_tag(["preview.ogg", "preview.webm", "preview.mp4"], poster: "Italy_001.png",  autobuffer: true, autoplay: true, loop:true) %>

	<div class="intro-section">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="introsection wow fadeInUp animated" data-wow-offset="10" data-wow-duration="1.5s">
						<!-- begin logo intro section -->
						<%= image_tag "logo_bw.png", :title => "logo" %>
						<!-- end logo intro section -->
						<h1>Solution de cartographie<br/>pour l'environnement ambiant</h1>
						<ul class="list-inline">
							<li>
								<a href="#polo" class="btn btn-custom">
									<i class="fa fa-align-left"></i>
									Discover
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	
</section>
<!-- end intro section -->

<div class="divider"></div>

<!-- begin features section -->
<section class="features" id="polo">

	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="section-head wow fadeIn animated" data-wow-offset="120" data-wow-duration="1.5s">
					<h1>Polo simplifie votre travail</h1>
					<p>Il mesure et collecte des données sur la salubrité de l'environnement ambiant</p>
					<span class="underline"></span>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-4">
				<div class="features-left wow fadeInLeft animated" data-wow-offset="10" data-wow-duration="1.5s">
					
					<!-- begin single feature item -->
					<div class="feature">
						<div class="icon-container">
							<div class="icon">
							<i class="fa fa-code"></i>
							</div>
						</div>

						<div class="fetaure-details">
							<h4 class="main-color">Température</h4>
							<p>
								19°C est la température intérieure idéale ! Mais une mauvaise répartition peut créer des courants d’air !
							</p>
						</div>
					</div>
					<!-- end single feature item -->

					<!-- begin single feature item -->
					<div class="feature">
						<div class="icon-container">
							<div class="icon">
							<i class="fa fa-tint"></i>
							</div>
						</div>

						<div class="fetaure-details">
							<h4 class="main-color">Humidité</h4>
							<p>
								Détecter les zones humides permet de prévenir les moisissures qui peuvent apparaître sur les murs.
							</p>
						</div>
					</div>
					<!-- end single feature item -->

					<!-- begin single feature item -->
					<div class="feature">
						<div class="icon-container">
							<div class="icon">
							<i class="fa fa-lightbulb-o"></i>
							</div>
						</div>

						<div class="fetaure-details">
							<h4 class="main-color">Luminosité</h4>
							<p>
								Sachez comment est éclairé votre intérieur jusqu’à savoir où poser votre orchidée !
							</p>
						</div>
					</div>
					<!-- end single feature item -->

				</div>
			</div>
			
			<div class="col-md-4">
				<!-- begin feature image -->
				<figure class="image-features wow bounceIn animated animated" data-wow-offset="120" data-wow-duration="1.5s">
					<%= image_tag "polo.png", :title => "polo" %>
				</figure>
				<!-- end feature image -->
			</div>
			
			<div class="col-md-4">
				<div class="features-right wow fadeInRight animated" data-wow-offset="10" data-wow-duration="1.5s">

					<!-- begin single feature item -->
					<div class="feature">
						<div class="icon-container">
							<div class="icon">
							<i class="fa fa-thumbs-up"></i>
							</div>
						</div>

						<div class="fetaure-details">
							<h4 class="main-color">Particules</h4>
							<p>
								Les matériaux, les poussières et autres fumées peuvent provoquer des réactions allergiques. Repérer leur source d’émissions permet de traiter cette nuisance.
							</p>
						</div>
					</div>
					<!-- end single feature item -->

					<!-- begin single feature item -->
					<div class="feature">
						<div class="icon-container">
							<div class="icon">
							<i class="fa fa-refresh"></i>
							</div>
						</div>

						<div class="fetaure-details">
							<h4 class="main-color">Qualité de l'air</h4>
							<p>
								La qualité de l’air intérieur est primordial pour vous assurer un bien-être dans votre espace de vie.
							</p>
						</div>
					</div>
					<!-- end single feature item -->

					<!-- begin single feature item -->
					<div class="feature">
						<div class="icon-container">
							<div class="icon">
							<i class="fa fa-map-marker"></i>
							</div>
						</div>

						<div class="fetaure-details">
							<h4 class="main-color">Accéléro-gyro-magnétomètre</h4>
							<p>
							Ce capteur nous permet d’accomplir notre mission : localiser avec précision les données collectées de votre environnement.
							</p>
						</div>
					</div>
					<!-- end single feature item -->
				</div>
			</div>
		</div>
	</div>

</section>
<!-- end features section -->

<div class="divider"></div>

<!-- begin brief section -->
<section class="brief" id="dash">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-sm-12">
				<div class="brief-content wow fadeInLeft animated" data-wow-offset="10">
